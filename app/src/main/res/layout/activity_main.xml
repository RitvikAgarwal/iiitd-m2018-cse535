            android:padding="10dp"
            android:paddingHorizontal="20dp"
            android:text="x:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/acc_x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingHorizontal="20dp" />

        <TextView
            android:id="@+id/accTV_y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
